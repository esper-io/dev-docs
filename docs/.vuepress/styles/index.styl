@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@500&family=Nunito+Sans:wght@400;600;700;800&display=swap');

a
    font-weight: 800 !important;
    color: #5e4898;

.navbar
    border: none;
    padding-left: 5rem;
    filter: drop-shadow(1px 1px 2px #00000025);

header > .links
    #algolia-search-input
        border-radius: 6px;
        border: none;
        background-color: #273054;
        color: white;
    #algolia-search-input:focus
        background-color: rgb(53, 64, 107);
.sidebar
    border-right: none;
    overflow:   scroll;
    overflow-x: hidden;
    background: #f6f7fd;


@media (max-width: 719px) {
    .sidebar {
        filter: drop-shadow(1px 1px 2px #00000025);
    }
}

.sidebar::-webkit-scrollbar
    width: 9px;
    background: transparent; /* make scrollbar transparent */
.sidebar:hover::-webkit-scrollbar-thumb:vertical
    background: rgba(45, 40, 51, 0.1);
    border-radius: 1rem;
    
.sidebar > .sidebar-links > li > a.sidebar-link
    font-family: "Nunito Sans", sans-serif;
    font-weight: 700 !important;
    color: #151828;

.sidebar > .sidebar-links > li > a.sidebar-link.active
    color: #3c56b1 !important;

.sidebar-sub-header > .active.sidebar-link
    color: #252222;
    font-weight: 700 !important;

.sidebar-sub-header > .sidebar-link
    font-family: "Nunito Sans", sans-serif;
    font-weight: normal !important;
    color: #00000080;
